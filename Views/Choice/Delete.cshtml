@model Choice

<h2>Delete Choice</h2>
<p>Are you sure you want to delete this choice?</p>
<div>
<h4>Choice</h4>
<hr />
    <dl class="row">
        <dt class="col-sm-2">Choice ID</dt>
        <dd class="col-sm-10">@Model.ChoiceId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Text</dd>

        <dt class="col-sm-2">Belongs to scene</dt>
        <dd class="col-sm-10">@Model.ThisScene.Text</dd>

        @if (@Model.NextScene != null) {
            <dt class="col-sm-2">Goes to nextScene</dt>
            <dd class="col-sm-10">@Model.NextScene.Text</dd>
        } 
        
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ChoiceId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Update" asp-route-id="@Model.ChoiceId" class="btn btn-secondary">Cancel</a>
    </form>
</div>