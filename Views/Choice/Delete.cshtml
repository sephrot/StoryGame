@model Choice

<div class="table-wrap">
<h1>Delete Choice</h1>
<p class="display-6">Are you sure you want to delete this choice?</p>
<div class="form-card">
    <dl class="row">
        <dt class="col-sm-2">Choice ID</dt>
        <dd class="col-sm-10">@Model.ChoiceId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Text</dd>
        @if (Model.ThisScene != null) {
            <dt class="col-sm-2">Belongs to scene</dt>
            <dd class="col-sm-10">@Model.ThisScene.Text</dd>
        }
        
        @if (@Model.NextScene != null) {
            <dt class="col-sm-2">Goes to nextScene</dt>
            <dd class="col-sm-10">@Model.NextScene.Text</dd>
        } 
        
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ChoiceId" method="post" class="toolbar">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <a asp-action="Update" asp-route-id="@Model.ChoiceId" class="btn btn-outline-warning">Cancel</a>
    </form>
    </div>
</div>