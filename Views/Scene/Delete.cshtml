@model Scene

<div class="table-wrap">
<h1>Delete Scene</h1>
<p>Are you sure you want to delete this scene?</p>
<hr />
    <dl class="row form-card">
        <dt class="col-sm-2">Scene ID</dt>
        <dd class="col-sm-10">@Model.SceneId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Text</dd>

        @if (Model.Story != null) {
            <dt class="col-sm-2">Belongs to story</dt>
            <dd class="col-sm-10">@Model.Story.Text</dd>    
        }
        
    
        
    </dl>
    <div class="toolbar">
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.SceneId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Update" asp-route-id="@Model.SceneId" class="btn btn-secondary">Cancel</a>
    </form>
    </div>
</div>