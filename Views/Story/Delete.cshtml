@model Story
<div class="table-wrap">
<h1 class="page-title">Delete Story</h1>
<p class="page-title">DELETING THIS STORY WILL DELETE ALL THE SCENES AND CHOICES RELATED TO THE STORY</p>
    <dl class="row form-card">
        <dt class="col-sm-2">Story ID</dt>
        <dd class="col-sm-10">@Model.StoryId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Text</dd>
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.StoryId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.StoryId" class="btn btn-outline-warning">Cancel</a>
    </form>
</div>