@{
    ViewData["Title"] = "All the stories!";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/tablestory.css" asp-append-version="true" />
</head>
<body>
    <div class="story-menu">
        <h1>All the stories!</h1>

        <div class="menu-buttons">
            <a class="btn-pixel btn-secondary btn-wide"
               asp-controller="Story"
               asp-action="Create">
                Write Your Own Story
            </a>

            <a class="btn-pixel btn-ok btn-wide"
               asp-controller="Home"
               asp-action="Index">
                Back to Home
            </a>
        </div>
    </div>
</body>
</html>
