@{
    ViewData["Title"] = "Title Screen";
    Layout = null; // no shared layout, we want a full-screen start view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - StoryGame</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/title.js"></script>
</head>
<body>
   <div class="title-screen">
  <div class="menu">
      <h1 class="game-title">Select Your Story</h1>
  </div>

  <!-- New: two choices, left/right -->
  <nav class="choices">
      <a class="choice-btn" asp-controller="Story" asp-action="TableStory">Create your own story</a>
      <a class="choice-btn" asp-controller="Story" asp-action="StoryView">Continue from existing story</a>
  </nav>
</div>

</body>
</html>
